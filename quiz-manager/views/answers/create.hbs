<h1>Create a new answer</h1>

<form action="/answers/{{answer.0.questionid}}/create" method="POST">
    <p>{{question}}</p>
    <input type="text" placeholder="Answer ID" name="id" value={{answer.3.id}}>
    <input type="text" placeholder="New Answer" name="answer">
    <input type="text" placeholder="Correct - True/False?" name="correct">
    <input type="text" placeholder="quizid" name="quizid" value={{answer.0.questionid}} >
    <button type="submit">Submit</button>
</form>