<h1>View Questions</h1>

{{#if isRestricted}}
<h1>All {{quizName.title}} Questions</h1>
  {{#each questions}}
  <table>
    <tr>
      <td>{{this.id}}.</td>
      <td>{{this.question}}</td>
    </tr>
</table>
{{/each}}

{{else}}

<h1>All {{quizName.title}} Questions</h1>
  {{#each questions}}
  <table>
    <tr>
      <td>{{this.id}}.</td>
      <td>{{this.question}}</td>
      <td>
        <form action="/answers/{{this.id}}/" method="GET">
          <button type="submit">Answers</button>
        </form>
      </td>
    </tr>
</table>
{{/each}}
{{/if}}